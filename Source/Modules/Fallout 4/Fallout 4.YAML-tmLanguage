      - include: '#endOfLine'

  if:
    patterns:
    - comment: If statement
      name: meta.if.papyrus
      begin: (?i)^\s*(if)\b
      beginCaptures:
       '1': {name: keyword.other.papyrus}
      end: ([\n\r])
      patterns:
      - include: '#expression'
      - include: '#endOfLine'

  elseif:
    patterns:
    - comment: ElseIf statement
      name: meta.elseif.papyrus
