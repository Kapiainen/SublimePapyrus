      beginCaptures:
       '1': {name: keyword.other.papyrus}
      end: ([\n\r])
      patterns:
      - include: '#expression'
      - include: '#endOfLine'

  else:
    patterns:
    - comment: Else statement
      name: meta.else.papyrus
